<% breadcrumb :Log_in %>
<div style="width: 60%; margin: 0 auto;">
  <h1 style="padding:0px 50px; text-align: center;">
    <span class="glyphicon glyphicon-lock"></span>Log in
  </h1>
  <hr>

  <div style="padding:20px 50px;">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <label for="email"><span class="glyphicon glyphicon-envelope"></span> Email</label><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "50" %>
      </div>
      <div class="field", style="margin: 30px 0;">
        <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Password</label><br>
        <%= f.password_field :password, autocomplete: "off", :size => "50"  %>
      </div>

      <button type="submit" class="btn btn-large btn-radius btn-color04 btn-hover04" >
        <span class="btn-text">Log in</span>
        <span class="btn-bg"></span>
      </button><br>
      Not a member?
      <a class="" href="<%= new_registration_path(resource_name) %>" >
        <span class="btn-text">Sign up</span>
        <span class="btn-bg"></span>
      </a>

    <% end %>
  </div>
</div>

