<% breadcrumb :contacts %>
<div class="row">
  <div class="col-xs-9">
  	<span style="font-size: 36px;">Contacts</span>
    <span class="pull-right">
      <a class="btn btn-medium btn-radius btn-color03 btn-hover03" href="#" data-toggle="modal" data-target="#contactModal">
        <span class="btn-text">ソムリエへメッセ</span>
        <span class="btn-bg"></span>
      </a>
    </span>
  	<hr>

    <table class = "table table-hover" style="margin-top: 0;">
      <thead>
        <tr>
          <th>未読記事</th>
          <th>タイトル</th>
          <th>投稿日</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td>
              <% if contact.re_question? %>
                <% if contact.read_flg == true %>
                  返信あり
                <% else %>
                  既読ずみ
                <% end %>
              <% else %>
                回答待ち
              <% end %>
            </td>
            <td>
              <%= link_to contact_path(contact) do %>
                <%= contact.contact_name %>
              <% end %>
            </td>
            <td><%= contact.created_at.strftime('%b %d, %Y') %></td>
            <td><%= contact.read_flg %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


  </div>
  <%= render partial: "layouts/sidebar" %>
</div>


