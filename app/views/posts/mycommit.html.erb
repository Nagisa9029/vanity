<% breadcrumb :postCommit %>
<div class="row">
  <div class="col-xs-9">
    <span style="font-size: 36px;">Community / MyCommit</span>
    <span class="pull-right">
      <a class="btn btn-medium btn-radius btn-color01 btn-hover01" href="#" data-toggle="modal" data-target="#postModal">
        <span class="btn-text">新規つぶやき</span>
        <span class="btn-bg"></span>
      </a>
      <a class="btn btn-medium btn-radius btn-color00 btn-hover00" href="/posts/postrule" >
        <span class="btn-text">つぶやき心得</span>
        <span class="btn-bg"></span>
      </a>
    </span>
    <hr>


    <table class = "table table-hover" style="margin-top: 0;">
      <thead>
        <tr class="">
          <th>投稿日</th>
          <th>タイトル</th>
          <th>新規コメント</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.created_at.strftime('%b %d, %Y') %></td>
            <td>
              <%= link_to post_path(post) do %>
                <%= post.p_title %>
              <% end %>
            </td>
            <td><%= "#{post.comments.where(read_flg: true).count}" %>件</td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
  <%= render partial: "layouts/sidebar" %>
</div>
