<div class="modal" id="postModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header", style="background: #e7efff;">
        <button type="button" class="close" data-dismiss="modal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
        <h3 class="title">新規つぶやき</h3>
      </div>

      <% nouveaupost = Post.new %>
      <%= nested_form_for(nouveaupost) do |f| %>
        <table style="margin: 30px;">
          <tr height="50">
            <th><%= f.label :タイトル %></th>
            <td><%= f.text_field :p_title, :size => "70", required: true %></td>
          </tr>
          <tr height="50">
            <th><%= f.label :テーマ %></th>
            <td><%= f.select :p_category, [["つぶやき", "つぶやき"], ["あるある", "あるある"], ["誰か教えてっ", "誰か教えてっ"], ["グルメ", "グルメ"], ["その他", "その他"]] ,class:"form-control" %></td>
          </tr>
          <tr height="50">
            <th valign="top"><%= f.label :つぶやき %></th>
            <td><%= f.text_area :p_body, :size => "70x10", required: true %></td>
          </tr>
        </table>
        <%= f.fields_for :postimages do |image_form| %>
          <div class="modal-body">
            <%= image_form.attachment_field :image %>
            <%= image_form.link_to_remove "削除" %>
          </div>
        <% end %>
        <%= f.link_to_add "画像を追加", :postimages %>


        <div class="modal-footer">
          <button type="action" class="btn btn-medium btn-radius btn-color01 btn-hover01">
            <span class="btn-text">投稿</span>
            <span class="btn-bg"></span>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
$( function() {
  $('#postButton').click( function () {
    $('#postModal').modal();
  });
});
</script>
