<div class="modal" id="contactModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header", style="background: #FFFFBB;">
        <button type="button" class="close" data-dismiss="modal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
        <h4 class="modal-title">タイトル</h4>
      </div>

      <% newcontact = Contact.new %>
      <%= nested_form_for(newcontact) do |f| %>
        <table style="margin: 30px;">
          <tr height="50">
            <th><%= f.label :タイトル %></th>
            <td><%= f.text_field :contact_name, :size => "70", required: true %></td>
          </tr>
          <tr>
            <th valign="top"><%= f.label :質問 %></th>
            <td><%= f.text_area :question, :size => "70x10", required: true %></td>
          </tr>
        </table>

        <div class="modal-footer">
          <button type="action" class="btn btn-medium btn-radius btn-color03 btn-hover03" href="#" data-toggle="modal" data-target="#gourmetModal">
            <span class="btn-text">ソムリエへメッセ</span>
            <span class="btn-bg"></span>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  $('#contactModal').on('show.bs.modal', function (event) {
    var button = $(event.relatedTarget);
    var recipient = button.data('recipient');
    var modal = $(this);
    modal.find('.modal-title').text(recipient + 'へのメッセージ');
  });
</script>