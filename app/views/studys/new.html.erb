<h1>三択クイズ</h1>
<hr>
<h2>問題</h2>
<div id="text_q"></div>
<h2>選択</h2>
<div id="text_s"></div>
<h2>解答</h2>
<div id="text_a"></div>


<script type="text/javascript">
//問題と解答
qa = new Array();
qa[0] = ["ワイン生産量１位はどこの国？","フランス","アメリカ","日本",1];
qa[1] = ["ワインのプロフェッショナルを何という？","ノムリエ","ソムリエ","マイスター",2];
qa[2] = ["ワイン葡萄の収穫時期は？","夏頃","春頃","秋頃",3];
qa[3] = ["ボジョレーヌーボー解禁日は？","11月第三木曜日","11月第一金曜日","11月最終日曜日",1];
qa[4] = ["ワインは赤、白　あと何がある？","黒","ロゼ","白",2];
qa[5] = ["ワイン英語にすると？","vino","rosso","wine",3];
qa[6] = ["ワインの原料は？","りんご","ぶどう","コメ",2];
qa[7] = ["ヴィンテージ？さて何のこと？？","ワインの年号","ワインのぶどう品種","作られた国",1];
qa[8] = ["ワインのアルコール度数は？","50°~","30~40°くらい","10~20°くらい",3];
qa[9] = ["ワインはグラスにどれくらい注ぐのが理想？","並々","３分目","半分",2];

//初期設定
//count = 0; //問題番号
q_sel = 3; //選択肢の数

setReady();

//最初の問題
//quiz();

//初期設定
function setReady() {
	count = 0; //問題番号
	ansers = new Array(); //解答記録

	//最初の問題
	quiz();
}

//問題表示
function quiz() {
	//問題
	document.getElementById("text_q").innerHTML = (count + 1) + "問目：" + qa[count][0];
	//選択肢
	s = "";
	for (n=1;n<=q_sel;n++) {
		s += "【<a href='javascript:anser(" + n + ")'>" + n + "：" + qa[count][n] + "</a>】";
	}
	document.getElementById("text_s").innerHTML = s;
}

//解答表示
function anser(num) {
	var s;
	s = (count + 1) + "問目：";
	//答え合わせ
	if (num == qa[count][q_sel + 1]) {
		//正解
		s += "○" + qa[count][num];
		ansers[count] = "○";
	} else {
		s += "×" + qa[count][num];
		ansers[count] = "×";
	}
	document.getElementById("text_a").innerHTML = s;

	//次の問題を表示
	count++;
	if (count < qa.length) {
		quiz();
	} else {
		//終了
		s = "<table border='2'><caption>成績発表</caption>";
		//1行目
		s += "<tr><th>問題</th>";
		for (n=0;n<qa.length;n++) {
			s += "<th>" + (n+1) + "</th>";
		}
		s += "</tr>";
		//2行目
		s += "<tr><th>成績</th>";
		for (n=0;n<qa.length;n++) {
			s += "<td>" + ansers[n] + "</td>";
		}
		s += "</tr>";
		s += "</table>";
		document.getElementById("text_q").innerHTML = s;
		//次の選択肢
		s = "【<a href='javascript:history.back()'>前のページに戻る</a>】";
		s += "【<a href='javascript:setReady()'>同じ問題を最初から</a>】";
		//s += "【<a href=''>次の問題に進む</a>】";
		document.getElementById("text_s").innerHTML = s;
	}
}

</script>
